*
  margin: 0
  padding: 0
  box-sizing border-box
  outline none

body
  padding: 15px 50px
  font 13px / 16px Helvetica Neue, Tahoma, Arial, sans-serif
  color #222

h1, h2, h3
  font bold 18px / 24px Helvetica Neue, Tahoma, Arial, sans-serif

h1, h2, h3, div, p
  margin-bottom: 10px

a
  color blue

.Container
  padding: 20px 0

.footer
  background #ccc
  padding: 10px
  color: #666
  background: linear-gradient(#e6e5e5, #a09e9e)
  border-radius 3px

nav
  ul
    width: 100%
    display inline-block
    background #3F51B5
    background: linear-gradient(#2196F3, #3F51B5)
    border-radius 3px
  li
    float: left
    list-style none
    > a
      padding: 0 10px
      font-size 14px
      line-height: 50px
      display block
      color #fff
      text-decoration none
    //> a.active
    //  color: #89d1e8

button
  cursor: pointer
  line-height: 20px
  text-align center
  padding: 0 20px
  user-select none
  margin-bottom: 15px

button:hover
  background #beb8b9

button:active
  background #a09e9e

input
  padding: 0 6px

input, button
  line-height: 24px
  font-size 14px
  border 1px solid #ccc
  border-radius 3px

.error,
.invalid-feedback
  color #ff1512
  font-size: 12px
  margin-top: 4px

.form-text
  color #177518
